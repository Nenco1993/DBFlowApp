<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.example.neven.dbflowapp.activities.AddUsersActivity"
>

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:layout_alignParentTop="true" android:layout_centerHorizontal="true" android:id="@+id/etFirstNameUpdate"
            android:hint="first name"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etLastNameUpdate"
            android:hint="last name" android:layout_below="@+id/etFirstNameUpdate" android:layout_alignParentStart="true"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPostalAddress"
            android:ems="10"
            android:layout_below="@+id/etPhoneNumberUpdate" android:layout_centerHorizontal="true"
            android:id="@+id/etAddressUpdate" android:hint="address"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/etRoomNumberUpdate"
            android:hint="room number" android:layout_below="@+id/etAddressUpdate" android:layout_alignParentStart="true"/>
    <TextView
            android:text="VIP:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3" android:layout_below="@+id/etRoomNumberUpdate"
            android:layout_alignParentStart="true" android:layout_marginTop="20dp"/>
    <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_below="@+id/etRoomNumberUpdate"
            android:layout_toEndOf="@+id/textView3" android:layout_marginStart="12dp" android:id="@+id/radioGroup">





        <RadioButton
                android:text="YES"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/rbYes"/>

        <RadioButton
                android:text="NO"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/rbNo"/>
    </RadioGroup>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/etPhoneNumberUpdate"
            android:hint="phone number" android:layout_below="@+id/etLastNameUpdate" android:layout_alignParentStart="true"/>


</RelativeLayout>
